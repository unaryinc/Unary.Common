{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
            "type": "shell",
            "label": "Build",
            "args": [
                "-f",
                "${workspaceFolder}/Makefile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows":
            {
                "command": "mingw32-make"
            },
            "linux":
            {
                "command": "make"
            }
        }
	]
}